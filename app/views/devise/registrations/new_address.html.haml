.sign-content
  .sign-header
    .sign-header__left
      = image_tag asset_path('logo/logo.png'), class: "sign-header__left--icon"
    .sign-header__right
      %ul.active
        %li.active__left
          会員情報
          .status
        %li.active__center
          電話番号認識
          .status
        %li.active__right
          完了
          .status

  .sign-content__main
    .sign-content__main--list
      %h1.content-top 会員情報入力
      = form_with(model: @address, url: addresses_path, id: 'new_user', class: 'new_user', local: true) do |f|
        = render "devise/shared/error_messages", resource: @address
        .new_user__main
          .main-first
            = f.label :"お名前(全角)", class: "main-name"
            %span.require-text 必須
          = f.text_field :last_name, autofocus: true, placeholder: "例) 山田", class: "main-name"
          = f.text_field :first_name, autofocus: true, placeholder: "例) 彩", class: "main-name"
        .new_user__main
          .main-first
            = f.label :"お名前カナ(全角)", class: "main-name"
            %span.require-text 必須
          = f.text_field :last_name_kana, autofocus: true, placeholder: "例) ヤマダ", class: "main-name"
          = f.text_field :first_name_kana, autofocus: true, placeholder: "例) アヤ", class: "main-name"
        .new_user__main
          .main-first
            = f.label :"郵便番号", class: "main-name"
            %span.require-text 必須
          = f.text_field :post_code, autofocus: true, placeholder: "", class: "main-name"
        .new_user__main
          .main-first
            = f.label :"都道府県", class: "main-name"
            %span.require-text 必須
          .exhibit-box__main__delivery__originbox__form
            = f.select :prefecture , class: "form-area-origin" do
              %option{ value: ""} 選択してください
              %option{ value: "1"} 北海道
              %option{ value: "2"} 青森県
              %option{ value: "3"} 岩手県
              %option{ value: "4"} 宮城県
              %option{ value: "5"} 秋田県
              %option{ value: "6"} 山形県
              %option{ value: "7"} 福島県
              %option{ value: "8"} 茨城県
              %option{ value: "9"} 栃木県
              %option{ value: "10"} 群馬県
              %option{ value: "11"} 埼玉県
              %option{ value: "12"} 千葉県
              %option{ value: "13"} 東京都
              %option{ value: "14"} 神奈川県
              %option{ value: "15"} 新潟県
              %option{ value: "16"} 富山県
              %option{ value: "17"} 石川県
              %option{ value: "18"} 福井県
              %option{ value: "19"} 山梨県
              %option{ value: "20"} 長野県
              %option{ value: "21"} 岐阜県
              %option{ value: "22"} 静岡県
              %option{ value: "23"} 愛知県
              %option{ value: "24"} 三重県
              %option{ value: "25"} 滋賀県
              %option{ value: "26"} 京都府
              %option{ value: "27"} 大阪府
              %option{ value: "28"} 兵庫県
              %option{ value: "29"} 奈良県
              %option{ value: "30"} 和歌山県
              %option{ value: "31"} 鳥取県
              %option{ value: "32"} 島根県
              %option{ value: "33"} 岡山県
              %option{ value: "34"} 広島県
              %option{ value: "35"} 山口県
              %option{ value: "36"} 徳島県
              %option{ value: "37"} 香川県
              %option{ value: "38"} 愛媛県
              %option{ value: "39"} 高知県
              %option{ value: "40"} 福岡県
              %option{ value: "41"} 佐賀県
              %option{ value: "42"} 長崎県
              %option{ value: "43"} 熊本県
              %option{ value: "44"} 大分県
              %option{ value: "45"} 宮崎県
              %option{ value: "46"} 鹿児島県
              %option{ value: "47"} 沖縄県
        .new_user__main
          .main-first
            = f.label :"市町村", class: "main-name"
            %span.require-text 必須
          = f.text_field :city, autofocus: true, placeholder: "", class: "main-name"
        .new_user__main
          .main-first
            = f.label :"番地", class: "main-name"
            %span.require-text 必須
          = f.text_field :block, autofocus: true, placeholder: "", class: "main-name"
        .new_user__main
          .main-first
            = f.label :"建物名", class: "main-name"
            %span.require-text 必須
          = f.text_field :building, autofocus: true, placeholder: "", class: "main-name"
        .new_user__main
          .main-first
            = f.label :"電話番号", class: "main-name"
          = f.text_field :phone_number, autofocus: true, placeholder: "", class: "main-name"
        = f.submit "次へ進む", class: 'main-bottom__btn'
          
                
          
        
  .sign
    .sign-footer
      .sign-footer__top
        %ul.footer-top
          %li.footer-top__left
            = link_to "プライバシーポリシー", "#", class: "footer-top__left--text"
          %li.footer-top__center
            = link_to "フリマ利用規約", "#", class: "footer-top__left--text"
          %li.footer-top__right
            = link_to "特定商取引に関する表記", "#", class: "footer-top__left--text"
      = image_tag asset_path('logo/logo.png'), class: "sign-footer__center"
      .sign-footer__bottom
        %small.sign-footer__bottom--text © Furima, Inc.